/*
parallax
*/

.bespoke-parallax {

  /*
  height: 100vh;
  */

  min-height: 75vh;
  overflow-x: hidden;
  overflow-y: auto;
  -webkit-perspective: 1px;
  perspective: 1px;
  font-size: 20px;

}

.bespoke-parallax img {

  box-shadow: none;
  width: 100%;

}

.parallax-group {

  -webkit-transform-style: preserve-3d;
  transform-style: preserve-3d;
  position: relative;
  height: 750px;
  height: 100vh;

}

.parallax-group:nth-of-type(even)  {

  text-align: left;
  color: pink;

}

.parallax-group:nth-of-type(odd)  {

  text-align: right;
  color: blue;

}

.parallax-title {

  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  position: absolute;
  width: 100%;
  left: 50%;
  top: 50%;

}

.parallax-layer {

  position: absolute;
  bottom: 0;
  right: 0;
  left: 0;
  top: 0;


}

.parallax-layer-back {

  -webkit-transform: translateZ(-1px) scale(2);
  transform: translateZ(-1px) scale(2);

}

.parallax-layer-base {

  -webkit-transform: translateZ();
  transform: translateZ(0);

}


