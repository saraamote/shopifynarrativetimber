/*================ font reset ================*/

h1, h2, h3, h4, h5, h6 {

  font-family: 'Gotham SSm A', 'Gotham SSm B';
  font-style: normal;
  font-weight: 300;

}

h1 {

  font-size: 1.9em;
  font-weight: 500;

}

body, p, a, span {

  font-family: 'Gotham SSm A', 'Gotham SSm B';
  font-style: normal;
  font-weight: 200;

}

a {

  text-decoration: none;

}

a:hover {

  text-decoration: underline;

}

input[type="text"],
input[type="search"],
input[type="password"],
input[type="email"],
input[type="file"],
input[type="number"],
input[type="tel"],
textarea,
select {

  font-family: 'Gotham SSm A', 'Gotham SSm B';
  font-style: normal;
  font-weight: 300;

}



/*================ global ================*/

img {

  box-shadow: 0 2px 5px 0 rgba( 0 , 0 , 0 , 0.26 ),
  0 2px 10px 0 rgba( 0 , 0 , 0 , 0.16 );

}



/*================ header ================*/

.site-header__logo a {

  font-family: 'Obsidian A', 'Obsidian B';
  font-style: italic;
  font-weight: 400;
  font-size: 58px;
  color: #333;

}



