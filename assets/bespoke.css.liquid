/*================ font reset ================*/

h1, h2, h3, h4, h5, h6 {

  font-family: 'Gotham SSm A', 'Gotham SSm B';
  font-style: normal;
  font-weight: 300;

}

h1 {

  font-size: 1.85em;
  font-weight: 500;

}

body, p, a, span {

  font-family: 'Gotham SSm A', 'Gotham SSm B';
  font-style: normal;
  font-weight: 200;

}

a {

  text-decoration: none;

}

a:hover {

  text-decoration: underline;

}

input[type="text"],
input[type="search"],
input[type="password"],
input[type="email"],
input[type="file"],
input[type="number"],
input[type="tel"],
textarea,
select {

  font-family: 'Gotham SSm A', 'Gotham SSm B';
  font-style: normal;
  font-weight: 300;

}



/*================ global ================*/

img {

  box-shadow: 0 2px 5px 0 rgba( 0 , 0 , 0 , 0.26 ),
  0 2px 10px 0 rgba( 0 , 0 , 0 , 0.16 );

}



/*================ header ================*/

/* create fixed header */

.site-header,
.nav-bar {

  background: rgba( 255 , 255 , 255 , 0.75 );
  position: fixed;
  z-index: 200;
  padding: 0;
  margin: 0;
  right: 0;
  left: 0;
  top: 0;

}

.nav-bar {

  top: 53px;

}

.nav-search {

  display: none;

}


/* narrative logo */

.site-header__logo a {

  font-family: 'Obsidian A', 'Obsidian B';
  font-style: italic;
  font-weight: 400;
  font-size: 38px;
  color: #333;

}



/*================ product page ================*/

/*
general
*/

.grid.product-single,
breadcrumb {

  margin: 1em;

}

/*
parallax
*/

/* primary parallax container */

.bespoke-parallax {

  height: 100%;
  height: 100vh;
  min-height: 100%;
  min-height: 100vh;
  overflow-x: hidden;
  overflow-y: auto;
  -webkit-perspective: 1px;
  perspective: 1px;

}

/* product container */

.product-group {

  height: 100%;
  height: 100vh;
  min-height: 100%;
  min-height: 100vh;

}

.product-group img {

  height: 100%;
  width: auto;

}

/* blog feature container */

.parallax-blog-feature {

  margin-top: 80%;
  margin-top: 80vh;

}

.parallax-blog-feature img {

  box-shadow: none;
  height: 450px;

}

/* individual blog posts */

.parallax-group {

  -webkit-transform-style: preserve-3d;
  transform-style: preserve-3d;
  position: relative;
  height: 900px;

}

.parallax-group:nth-of-type(even) {

  text-align: right;
  color: black;

}

.parallax-group:nth-of-type( odd )  {

  text-align: left;
  color: grey;

}

.parallax-title {

  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  text-align: center;
  position: absolute;
  max-width: 320px;
  width: 100%;
  left: 50%;
  top: 50%;

}

.parallax-group:nth-of-type( odd ) .parallax-title {

  left: 75%;
  color: black;

}


.parallax-group:nth-of-type( even ) .parallax-title {

  color: grey;
  left: 25%;

}

.parallax-layer {

  position: absolute;
  bottom: 0;
  right: 0;
  left: 0;
  top: 0;


}

.parallax-layer-back {

  -webkit-transform: translateZ(-1px) scale(2);
  transform: translateZ(-1px) scale(2);

}

.parallax-layer-base {

  -webkit-transform: translateZ();
  transform: translateZ(0);

}


