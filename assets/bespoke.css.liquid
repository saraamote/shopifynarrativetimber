/*================ font reset ================*/

h1, h2, h3, h4, h5, h6 {

  font-family: 'Gotham SSm A', 'Gotham SSm B';
  font-style: normal;
  font-weight: 300;

}

h1 {

  font-size: 1.85em;
  font-weight: 500;

}

body, p, a, span {

  font-family: 'Gotham SSm A', 'Gotham SSm B';
  font-style: normal;
  font-weight: 300;

}

a {

  text-decoration: none;

}

a:hover {

  text-decoration: underline;

}

input[type="text"],
input[type="search"],
input[type="password"],
input[type="email"],
input[type="file"],
input[type="number"],
input[type="tel"],
textarea,
select {

  font-family: 'Gotham SSm A', 'Gotham SSm B';
  font-style: normal;
  font-weight: 300;

}

.main-content {

  padding: 0;
  margin: 0;

}


/*================ global ================*/

img {

  box-shadow: 0 2px 5px 0 rgba( 0 , 0 , 0 , 0.26 ),
  0 2px 10px 0 rgba( 0 , 0 , 0 , 0.16 );

}



/*================ header ================*/

/* create fixed header */

.site-header,
.nav-bar {

  background: transparent;
  position: fixed;
  z-index: 200;
  padding: 0;
  margin: 0;
  right: 0;
  left: 0;
  top: 0;

}

.nav-bar {

  top: 53px;

}

.nav-search {

  display: none;

}


/* narrative logo */

.site-header__logo a {

  font-family: 'Obsidian A', 'Obsidian B';
  font-style: italic;
  font-weight: 400;
  font-size: 38px;
  color: #333;

}



/*================ product page ================*/

/*
general
*/

.grid.product-single {

  margin: 115px 50px 0 50px;

}

/*
parallax
*/

/* primary parallax container */

.bespoke-parallax h1 {

  font-family: 'Didot 11 A', 'Didot 11 B';
  font-style: italic;
  position: relative;
  font-weight: 300;
  color: #000;

}

.bespoke-parallax .product-description p {

  color: #000;

}

.bespoke-parallax {

  height: 100%;
  height: 100vh;
  min-height: 1000%;
  min-height: 100vh;
  overflow-x: hidden;
  overflow-y: auto;
  -webkit-perspective: 1px;
  perspective: 1px;

}

/* product container */

.product-group {

  padding-top: 2.5vh;

}

.product-group img {

  height: 100%;
  width: auto;

}

/* blog feature container */

.parallax-blog-feature {

  margin-top: 80%;
  margin-top: 80vh;

}

.parallax-blog-feature img {

  box-shadow: none;
  height: 600px;

}

/* individual blog posts */

.parallax-group {

  -webkit-transform-style: preserve-3d;
  transform-style: preserve-3d;
  position: relative;
  height: 1200px;

}

.parallax-group:nth-of-type(even) {

  text-align: right;

}

.parallax-group:nth-of-type( odd )  {

  text-align: left;

}

.parallax-title {

  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  text-align: center;
  position: absolute;
  max-width: 320px;
  width: 100%;
  left: 50%;
  top: 5%;

}

.parallax-title h3:before {

  border-top: 4px solid #333;
  position: absolute;
  margin: auto;
  width: 30px;
  content:'';
  right: 0;
  left: 0;
  top: 0;

}

.parallax-title h3 {

  font-family: 'Didot 11 A', 'Didot 11 B';
  text-transform: lowercase;
  padding: 15px 5px 10px 5px;
  font-style: italic;
  position: relative;
  font-weight: 300;
  color: #333;

}

.parallax-title p {

  color: #000;

}

.parallax-group:nth-of-type( odd ) .parallax-title {

  left: 75%;

}


.parallax-group:nth-of-type( even ) .parallax-title {

  left: 25%;

}

.parallax-layer {

  position: absolute;
  bottom: 0;
  right: 0;
  left: 0;
  top: 0;


}

.parallax-layer-back {

  -webkit-transform: translateZ( -1px ) scale( 2 );
  transform: translateZ( -1px ) scale( 2 );

}

.parallax-layer-base {

  -webkit-transform: translateZ( 0 );
  transform: translateZ( 0 );

}

/*================ temp styling ================*/

.bespoke-parallax #ProductPrice {

  font-size: 1em;

}

.bespoke-parallax .quantity-selector {

  display: none;

}

#CartToggle,
.site-nav__link {

  text-transform: uppercase;
  font-size: 11px;
  font-weight: 400;
  color: #333;

}
